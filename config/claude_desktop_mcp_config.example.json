{
  "mcpServers": {
    "family-serve-delicious": {
      "command": "node",
      "args": ["<PATH_TO_PROJECT>/dist/index.js"],
      "env": {
        "MONGODB_URI": "mongodb://family_serve_admin:<PASSWORD>@localhost:27017/family_serve?authSource=admin",
        "NODE_ENV": "production",
        "OUTPUT_VALIDATION_MODE": "warn",
        "OUTPUT_VALIDATION_MAX_LENGTH": "50000",
        "OUTPUT_VALIDATION_LOG_PATH": "logs/output-validation.log",
        "LOG_ROTATION_SIZE": "10M",
        "LOG_ROTATION_MAX_FILES": "10",
        "LOG_ROTATION_COMPRESS": "true",
        "LOG_ROTATION_INTERVAL": "1d"
      }
    }
  }
}